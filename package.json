{
  "name": "remix-app-node",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "clean": "rm -Rf node_modules/ build/ .cache/",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "bun run db/migrate.ts",
    "db:seed": "bun run db/seed.ts",
    "dev": "remix dev --manual",
    "format": "bun biome format --write ./app",
    "lint": "bun biome check --apply ./app",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@lucia-auth/adapter-drizzle": "1.0.0",
    "@lucia-auth/adapter-sqlite": "3.0.0",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@react-email/components": "0.0.15",
    "@react-email/render": "^0.0.12",
    "@remix-run/css-bundle": "^2.8.1",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@remix-run/serve": "^2.8.1",
    "better-sqlite3": "^9.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^1.0.0",
    "date-fns": "^3.3.1",
    "drizzle-orm": "^0.30.1",
    "framer-motion": "^11.0.8",
    "isbot": "^5.1.1",
    "lucia": "3.0.1",
    "lucide-react": "^0.354.0",
    "react": "^18.2.0",
    "react-day-picker": "^8.10.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.2",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^0.9.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.0",
    "@remix-run/dev": "^2.8.1",
    "@tauri-apps/cli": "^1.5.11",
    "@types/better-sqlite3": "^7.6.9",
    "@types/bun": "^1.0.8",
    "@types/node": "^20.11.28",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "autoprefixer": "latest",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.14",
    "tailwindcss": "latest",
    "typescript": "^5.4.2",
    "wrangler": "3.32.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
